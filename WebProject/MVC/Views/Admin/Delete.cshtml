@model Data.Models.Admin
@{
    ViewData["Title"] = "Delete";
}


<h2>Delete Admin</h2>

<h3>Are you sure you want to delete this admin?</h3>
<div>
    
    <h4>Full Name: @Model.FullName</h4>
    <h4>Email: @Model.Email</h4>
    <h4>Student Number: @Model.AdminNumber</h4>
    <h4>Joining Date: @Model.JoiningDate.ToString("HH:mm dd/MM/yyyy")</h4>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AdminID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>

