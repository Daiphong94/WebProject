@using Data.Models

@{
    var student = ViewData["Student"] as Data.Models.Student;
    var competition = ViewData["Competition"] as Data.Models.Competition;
}

<h1>Join Competition</h1>
<form method="post" action="/SC/JoinCompetition">
    <div>
        <label for="Email">Email:</label>
        <input type="text" id="Email" name="Email" value="@student?.Email" readonly>
    </div>

    <div>
        <label for="CompetitionName">Competition Name:</label>
        <input type="text" id="CompetitionName" name="CompetitionName" value="@competition?.CompetitionName" readonly>
    </div>

    <!-- Trường ẩn để lưu trữ StudentID và CompetitionID -->
    <input type="hidden" id="StudentID" name="StudentID" value="@student?.StudentID">
    <input type="hidden" id="CompetitionID" name="CompetitionID" value="@competition?.CompetitionID">

    <div>
        <label for="JoinedDate">Joined Date:</label>
        <input type="text" id="JoinedDate" name="JoinedDate" value="@DateTime.Now" readonly>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
   
</form>
<a href="/">Quay lại trang chính</a>

<script>
    // Set joined date to current date
    document.getElementById("JoinedDate").value = new Date().toISOString().slice(0, 10);
</script>