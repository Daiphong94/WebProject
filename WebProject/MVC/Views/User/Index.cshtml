@model IEnumerable<Data.Models.User>

<h2>User List</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Password</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Password</td>
                    <td>@user.Role</td>
                    <td>
                        <button onclick="window.location.href='/User/Delete?id=@user.UserID'" class="btn btn-danger">Delete</button>

                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có đăng ký nào chờ duyệt.</p>
}