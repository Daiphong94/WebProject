@model Data.Models.Answer
@{
    ViewData["Title"] = "Create";
}


<h2>Create New Answer</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="QuestionID"></label>
        <input asp-for="QuestionID" class="form-control" />
        <span asp-validation-for="QuestionID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudentID"></label>
        <input asp-for="StudentID" class="form-control" />
        <span asp-validation-for="StudentID" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="File"></label>
        <input id="File" name="imageFile" type="file" class="form-control-file" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Writing">Bài làm:</label>
        <textarea asp-for="Writing" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Writing" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
</form>

