@model Data.Models.Answer
@{
    ViewData["Title"] = "My Answer";
}

<h2>My Answer</h2>

<form asp-action="MyAnswer" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="QuestionID" />
    <input type="hidden" asp-for="StudentID" />
   
    <div class="form-group">
        <label asp-for="File" class="control-label">File:</label>
        <input asp-for="File" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Writing" class="control-label">Writing:</label>
        <textarea asp-for="Writing" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Writing" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>