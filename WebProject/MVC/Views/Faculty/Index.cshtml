@model IEnumerable<Data.Models.Faculty>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="templatemo-content-widget no-padding">
    <div class="panel panel-default table-responsive">
        <table class="table table-striped table-bordered templatemo-user-table">
            <thead>
                <tr>

                    <td><a href="" class="white-text templatemo-sort-by">>Full Name<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Email<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Faculty Number <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Department <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Joining Date <span class="caret"></span></a></td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var faculty in Model)
                {
                    <tr>

                        <td>@faculty.FullName</td>
                        <td>@faculty.Email</td>
                        <td>@faculty.FacultyNumber</td>
                        <td>@faculty.Department</td>
                        <td>@faculty.JoiningDate.ToString("HH:mm dd/MM/yyyy")</td>
                       
                        <td>
                            <a asp-action="Edit" asp-route-id="@faculty.FacultyID" class="btn btn-primary btn-block">Edit</a>
                            
                            <a asp-action="Delete" asp-route-id="@faculty.FacultyID" class="btn btn-danger btn-block">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


<div class="pagination-wrap">
    <ul class="pagination">
        @{

            int page = !string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["page"]) ? int.Parse(ViewContext.HttpContext.Request.Query["page"]) : 1;
            int pageSize = 5;
            int totalItems = Model.Count();
            int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);


            if (page < 1)
            {
                page = 1;
            }
            else if (page > totalPages)
            {
                page = totalPages;
            }
        }

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="@(i == page ? "active" : "")">
                <a href="#" data-page="@i">@i <span class="sr-only">(current)</span></a>
            </li>
        }
    </ul>
</div>
