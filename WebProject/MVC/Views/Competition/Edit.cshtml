@model Data.Models.Competition
@{
    ViewData["Title"] = "Edit";
}


<h2>Edit Competition</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CompetitionID" />
    <div class="form-group">
        <label asp-for="CompetitionName"></label>
        <input asp-for="CompetitionName" class="form-control" />
        <span asp-validation-for="CompetitionName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
</form>

