@model Data.Models.Competition
@{
    ViewData["Title"] = "Create";
}




<!DOCTYPE html>
<html>
<head>
    <title>Create New</title>
    <link href="/css/Create.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="Word">
            <h1>Create New Competition</h1>
        </div>
        <div class="head">
            
        </div>

        <div class="body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="CompetitionName">Competition Name</label>
                    <input id="CompetitionName" name="CompetitionName" type="text" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Photo">Photo</label>
                    <input id="Photo" name="imageFile" type="file" class="form-control-file" />
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <span class="text-danger">@ViewBag.ErrorMessage</span>
                    }
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    <input id="Description" name="Description" type="text" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="StartDate">Start Date</label>
                    <input id="StartDate" name="StartDate" type="datetime-local" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="EndDate">End Date</label>
                    <input id="EndDate" name="EndDate" type="datetime-local" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <div class="footer">
            <a href="/" style="color: white">Quay lại trang chính</a>
        </div>
    </div>
</body>
</html>