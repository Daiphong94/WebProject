

@{
    ViewData["Title"] = "Index";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Visual Admin Dashboard - Manage Users</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">
    <!--
    Visual Admin Template
    http://www.templatemo.com/preview/templatemo_455_visual_admin
    -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/templatemo-style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- Left column -->
    <div class="templatemo-flex-row">
        <div class="templatemo-sidebar">
            <header class="templatemo-site-header">
                <div class="square"></div>
                <h1>Visual Admin</h1>
            </header>
            <div class="profile-photo-container">
                <img src="/img/photo/profile-photo.png" alt="Profile Photo" class="img-responsive">
                <div class="profile-photo-overlay"></div>
            </div>
            <!-- Search box -->
            <form class="templatemo-search-form" role="search">
                <div class="input-group">
                    <button type="submit" class="fa fa-search"></button>
                    <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                </div>
            </form>
            <div class="mobile-menu-icon">
                <i class="fa fa-bars"></i>
            </div>
            <nav class="templatemo-left-nav">
                <ul>

                    <li><a href="/"><i class="fa fa-home fa-fw"></i>Home</a></li>
                    <li><a asp-controller="Admin" asp-action="Account"><i class="fa fa-map-marker fa-fw"></i>Profile</a></li>
                    <li><a asp-controller="User" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Manage Users</a></li>
                    <li><a asp-controller="Registration" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Manage Registrations</a></li>
                    <li><a asp-controller="Admin" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Manage Admin</a></li>
                    <li><a asp-controller="Faculty" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Manage Facultys</a></li>
                    <li><a asp-controller="Student" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Manage Students</a></li>
                    <li><a asp-controller="Competition" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Competitions</a></li>
                    <li><a asp-controller="Question" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Questions</a></li>
                    <li><a asp-controller="Answer" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Answers</a></li>
                    <li><a asp-controller="Exam" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Exams</a></li>
                    <li><a asp-controller="Event" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>Events</a></li>
                    <li><a asp-controller="FAQ" asp-action="Index"><i class="fa fa-map-marker fa-fw"></i>FAQs</a></li>
                    
                    <li><a asp-controller="User" asp-action="Logout" asp-route-returnUrl="@Url.Content("~/")">Log out</a></li>
                </ul>
            </nav>
        </div>
        <!-- Main content -->
        <div class="templatemo-content col-1 light-gray-bg">
            <div class="templatemo-top-nav-container">
                <div class="row">
                    <nav class="templatemo-top-nav col-lg-12 col-md-12">
                        <ul class="text-uppercase">
                            <li><a href="" class="active">Admin panel</a></li>
                            <li><a href="">Dashboard</a></li>
                            <li><a href="">Overview</a></li>

                        </ul>
                    </nav>
                </div>
            </div>
            <div class="templatemo-content-container">
                
            @RenderBody()
                
            </div>
        </div>
    </div>

    <!-- JS -->
    <script type="text/javascript" src="/js/jquery-1.11.2.min.js"></script>      <!-- jQuery -->
    <script type="text/javascript" src="/js/templatemo-script.js"></script>      <!-- Templatemo Script -->
    <script>
        $(document).ready(function () {
            // Content widget with background image
            var imageUrl = $('img.content-bg-img').attr('src');
            $('.templatemo-content-img-bg').css('background-image', 'url(' + imageUrl + ')');
            $('img.content-bg-img').hide();
        });
    </script>
</body>
</html>
