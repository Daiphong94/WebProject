@model Data.Models.Student

@{
    ViewData["Title"] = "Delete";
}


<h2>Delete Student</h2>

<h3>Are you sure you want to delete this Student?</h3>
<div>
    
    <h4>Full Name: @Model.FullName</h4>
    <h4>Email: @Model.Email</h4>
    <h4>Student Number: @Model.StudentNumber</h4>
    <h4>Student Number: @Model.Class</h4>
    <h4>Student Number: @Model.Department</h4>
    <h4>Admission Date: @Model.AdmissionDate.ToString("HH:mm dd/MM/yyyy")</h4>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StudentID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>

