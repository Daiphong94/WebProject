        @model Data.Models.Student
        @{
            ViewData["Title"] = "Create";
        }
<head>
    <title>Create New</title>
    <link href="/css/Create.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="Word">
            <h1>Create New Student</h1>
        </div>
        <div class="head">
        </div>

        <div class="body">
            <form asp-action="Create" method="post">
                <div class="form-group row">
                    <label for="FullName" class="col-sm-2 col-form-label">Full Name</label>
                    <div class="col-sm-6">
                        <input asp-for="FullName" class="form-control" maxlength="50" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="School" class="col-sm-2 col-form-label">School</label>
                    <div class="col-sm-6">
                        <input asp-for="School" class="form-control" maxlength="50" />
                        <span asp-validation-for="School" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="StudentNumber" class="col-sm-2 col-form-label">Student Number</label>
                    <div class="col-sm-6">
                        <input asp-for="StudentNumber" class="form-control" maxlength="10" />
                        <span asp-validation-for="StudentNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Class" class="col-sm-2 col-form-label">Class</label>
                    <div class="col-sm-6">
                        <input asp-for="Class" class="form-control" maxlength="20" />
                        <span asp-validation-for="Class" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Department" class="col-sm-2 col-form-label">Department</label>
                    <div class="col-sm-6">
                        <input asp-for="Department" class="form-control" maxlength="50" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <div class="footer">
            <a href="/" style="color: white">Return to main page</a>
        </div>
    </div>
</body>
</html>
        