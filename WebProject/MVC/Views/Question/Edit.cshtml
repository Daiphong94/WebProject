@model Data.Models.Question
@{
    ViewData["Title"] = "Edit";
}


<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="/css/Create.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="Word">
            <h1>Edit Question</h1>
        </div>
        <div class="head">
            <p>
                <a class="btn btn-primary" asp-action="">Create New</a>
            </p>
        </div>

        <div class="body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="QuestionID" />
                <div class="form-group">
                    <label asp-for="CompetitionID"></label>
                    <input asp-for="CompetitionID" class="form-control" />
                    <span asp-validation-for="CompetitionID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="File"></label>
                    <input id="File" name="imageFile" type="file" class="form-control-file" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Writing"></label>
                    <input asp-for="Writing" class="form-control" />
                    <span asp-validation-for="Writing" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="footer">
            <a href="/" style="color: white">Quay lại trang chính</a>
        </div>
    </div>
</body>
</html>
