@model Data.Models.Question
@{
    ViewData["Title"] = "Create";
}


<h2>Create New Question</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>@ViewData["CompetitionName"]</label>
        <input type="text" class="form-control" value="@ViewData["CompetitionName"]" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CompetitionID"></label>
        <input asp-for="CompetitionID" class="form-control" />
        <span asp-validation-for="CompetitionID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="File"></label>
        <input id="File" name="imageFile" type="file" class="form-control-file" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Writing"></label>
        <input asp-for="Writing" class="form-control" />
        <span asp-validation-for="Writing" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
</form>

