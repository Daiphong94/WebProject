@model IEnumerable<Data.Models.Events>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="templatemo-content-widget no-padding">
    <div class="panel panel-default table-responsive">
        <table class="table table-striped table-bordered templatemo-user-table">
            <thead>
                <tr>
                    
                    <td><a href="" class="white-text templatemo-sort-by">Title<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Photo<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Description<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Location <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">ParticipantCount<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">StartDate<span class="caret"></span></a></td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model)
                {
                    <tr>

                        <td>@ev.Title</td>
                        <td>
                            <a href="@ev.Photo" target="_blank" class="image-link">
                                <img src="@ev.Photo" alt="Competition Image" width="80" height="50" />
                            </a>
                        </td>
                        <td>@ev.Description</td>
                        <td>@ev.Location</td>
                        <td>@ev.ParticipantCount</td>
                        <td>@ev.StartDate.ToString("HH:mm dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@ev.EventID" class="btn btn-primary btn-block">Edit</a>
                            
                            <a asp-action="Delete" asp-route-id="@ev.EventID" class="btn btn-danger btn-block">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


<div class="pagination-wrap">
    <ul class="pagination">
        @{

            int page = !string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["page"]) ? int.Parse(ViewContext.HttpContext.Request.Query["page"]) : 1;
            int pageSize = 5;
            int totalItems = Model.Count();
            int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);


            if (page < 1)
            {
                page = 1;
            }
            else if (page > totalPages)
            {
                page = totalPages;
            }
        }

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="@(i == page ? "active" : "")">
                <a href="#" data-page="@i">@i <span class="sr-only">(current)</span></a>
            </li>
        }
        <li>
            <a href="#" aria-label="Next">
                <span aria-hidden="true"><i class="fa fa-play"></i></span>
            </a>
        </li>
    </ul>
</div>
