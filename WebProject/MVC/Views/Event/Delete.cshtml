@model Data.Models.Events
@{
    ViewData["Title"] = "Delete";
}


<h2>Delete Event</h2>

<h3>Are you sure you want to delete this Event?</h3>
<div>

    <h4>Title: @Model.Title</h4>
    <h4>Description: @Model.Description</h4>
    <h4>Location: @Model.Location</h4>
    <h4>Participant Count: @Model.ParticipantCount</h4>
    <h4>Start Date: @Model.StartDate.ToString("HH:mm dd/MM/yyyy")</h4>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EventID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>

