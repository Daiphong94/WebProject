@model Data.Models.Survey

@{
    ViewData["Title"] = "Delete";
}


<h2>Delete Admin</h2>

<h3>Are you sure you want to delete this Faculty?</h3>
<div>

    <h4>Full Name: @Model.Title</h4>
    <h4>Email: @Model.Description</h4>
    <h4>Student Number: @Model.TargetRole</h4>
    <h4>Joining Date: @Model.StartDate.ToString("HH:mm dd/MM/yyyy")</h4>
    <h4>Joining Date: @Model.EndDate.ToString("HH:mm dd/MM/yyyy")</h4>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SurveyID" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>

