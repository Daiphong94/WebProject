@model Data.Models.Exam
@{
    ViewData["Title"] = "Edit";
}


<h2>Edit Exam</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ExamID" />
    <div class="form-group">
        <label asp-for="CompetitionID"></label>
        <input asp-for="CompetitionID" class="form-control" />
        <span asp-validation-for="CompetitionID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StudentID"></label>
        <input asp-for="StudentID" class="form-control" />
        <span asp-validation-for="StudentID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input asp-for="Score" class="form-control" />
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rank"></label>
        <input asp-for="Rank" class="form-control" />
        <span asp-validation-for="Rank" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
</form>

